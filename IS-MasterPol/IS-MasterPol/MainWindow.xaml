<Window x:Class="IS_MasterPol.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:IS_MasterPol"
        mc:Ignorable="d"
        Title="{Binding ElementName=NewFrame,Path=Content.Title}" Height="450" Width="800"
        MinHeight="450" MinWidth="800" WindowStartupLocation="CenterScreen">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="70"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>

        <Grid Grid.Row="0" Background="#F4E8D3">
            <StackPanel HorizontalAlignment="Center" VerticalAlignment="Center" Orientation="Horizontal">
                <Image Source="/Resources/Мастер пол.png" Margin="5,5,30,5"/>
                <TextBlock Text="Мастер пол" VerticalAlignment="Center" FontSize="25"></TextBlock>
            </StackPanel>
        </Grid>

        <Frame x:Name="NewFrame" NavigationUIVisibility="Hidden" Grid.Row="1" ></Frame>
    </Grid>
</Window>
